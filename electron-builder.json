{
  "appId": "dnfcalc",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist"],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg"]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "requireAdministrator",
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "api/main.exe",
      "to": "dnfcalc-api.exe"
    },
    {
      "from": "api/ResourceFiles",
      "to": "ResourceFiles"
    }
  ]
}
